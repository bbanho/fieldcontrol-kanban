FROM node:20-alpine

# Instalar dependências do sistema
RUN apk add --no-cache git

# Definir diretório de trabalho
WORKDIR /app

# Copiar package.json e package-lock.json
COPY package*.json ./

# Instalar dependências
RUN npm install

# Copiar código fonte
COPY . .

# Expor porta 4200
EXPOSE 4200

# Comando para iniciar em modo desenvolvimento
CMD ["npm", "start"] 